<h1>Dice Game</h1>

<% @dice.each do |die|%>
	<img src="https://uchicago.s3.amazonaws.com/d0<%= die%>.png" width="100" height="100">
<% end %>

<p>Sum DICEGAME <%= @sum%></p>
<%= @winlose%>
<p>Your goal is <%= $goal%></p>

<form method="routes.rb" controller: "dicegame" action:"show_dice">
